{
  "compilerOptions": {
    "target": "es2020",  // You can keep this as is
    "module": "ESNext",  // Change this to ESNext to support modern import/export
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Output folder for compiled JS files
    "rootDir": "./src",  // Source files folder
    "skipLibCheck": true,
    "strict": true
  }
}
